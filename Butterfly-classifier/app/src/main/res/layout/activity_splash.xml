<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/header"
        android:text="Butterfly Classifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1c4058"
        android:textSize="30dp"
        app:reflectionColor="#f00"
        android:layout_above="@+id/centerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp" />


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:src="@drawable/splash_center"/>




    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv"
        android:text="By Team glori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25dp"
        app:reflectionColor="#aaa1ac"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>